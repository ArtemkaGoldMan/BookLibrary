@model IEnumerable<BaseLibrary.Entities.Book>

@{
    ViewData["Title"] = "Books";
}

<h2 class="text-center">Books List</h2>

<div class="text-center">
    <a asp-action="Create" class="btn btn-success">Create New Book</a>
</div>

<div class="d-flex justify-content-center">
    <table class="table table-striped table-bordered w-75">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Author</th>
                <th scope="col">Published Date</th>
                <th scope="col">Genre</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Title</td>
                    <td>@book.Author</td>
                    <td>@book.PublishedDate.ToShortDateString()</td>
                    <td>@book.Genre</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
